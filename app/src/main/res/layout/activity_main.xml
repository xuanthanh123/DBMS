<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.izuna.baitapketnoi.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:context=".MainActivity"
        android:background="@drawable/index"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="8dp">


        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="144dp"
            android:hint="Nhập tên đăng nhập"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/et_userpass"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:hint="Nhập mật khẩu"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:inputType="textPassword"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btn_Login"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/et_userpass"
            android:layout_marginTop="41dp"
            android:background="#9900cc"
            android:padding="10dp"
            android:text="ĐĂNG NHẬP"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="57dp"
            android:gravity="center_horizontal"

            android:textColor="#ffffff"
            android:textSize="34sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/login"
            android:layout_marginStart="37dp"
            android:layout_marginBottom="62dp"
            android:layout_above="@+id/et_userpass"
            android:layout_alignParentStart="true" />

        <ProgressBar
            android:id="@+id/pbbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="29dp"
            android:layout_marginStart="76dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
